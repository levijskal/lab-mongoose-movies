{{#if theUser}}
<div>
Welcome {{theUser.username}}
</div>
{{/if}}


{{#each theList}}

<div>

    <a href="/movies/{{this._id}}">
<h3>Title: {{this.title}}</h3>
    </a>
    



   
   <p>
       genre: {{this.genre}}
   </p>


   <img src="{{this.image}}" alt="">

   <form action="/movies/delete/{{this._id}}" method="POST">
       <button>Delete This Movie</button>
   </form>

    

</div>

<hr>

{{/each}}